<section>
<div class="col-md-6 col-md-offset-3">
  <h1>MUSIC DATABASE</h1>
  <h2>Add a Song</h2>
  <p class="status"></p>
  <div class="errors bg-danger"></div>
  <%= form_for(@music) do |f| %>
    <div class="field">
      <%= f.label :title%><br>
      <%= f.text_field :title, class:'form-control',required:true, :maxlength => 40 %>
    </div>
    <div class="field">
      <%= f.label :artist %><br>
      <%= f.text_field :artist,  class:'form-control',required:true,:maxlength => 60 %>
    </div>
    <div class="field">
      <%= f.label :year %><br>
      <%= f.text_field :year,  class:'form-control',required:true %>
    </div>
    <div class="field">
      <%= f.label :genre %><br>
      <%= f.text_field :genre,  class:'form-control',required:true,:maxlength => 30 %>
    </div>
    <div class="actions">
      <%#= f.submit %>
      <%= f.submit 'Add Song',class:'btn btn-primary' %>
    </div>
  <% end %>
  
  <h2>List of Songs</h2>
  <table id="music_list" class="table table-stripped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Artist</th>
        <th>Year</th>
        <th>Genre</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @musics.each do |music| %>
        <tr>
          <td><%= music.title %></td>
          <td><%= music.artist %></td>
          <td><%= music.year %></td>
          <td><%= music.genre %></td>
          <td><%= link_to 'x', music, method: :delete, class: 'music_delete' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if @musics.empty? then %>
    <p class="no_music bg-warning text-center">No music yet... please, add some!</p>
  <% end %>
  
</div>
</section>